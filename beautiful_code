#include <stdio.h>

/**
 * ask_age - asks for your age
 *
 * Return: void
 */

void ask_age(void)
{
	int age;

	printf("Enter your age: ");
	scanf("%d", &age);

	if (age > 0)
	{
		printf("You are %d years old.\n", age);
	}
	else
	{
		printf("Invalid input.\n");
	}
}

/**
 * main - main
 *
 * Return: 0
 */

int main(void)
{
	ask_age();
	return (0);
}
